<h1>TechMeetups</h1>

  
  <div>
  <% unless current_user %>
  <h5 class="fst-italic text-primary">
    Login in order to create or attend and event
    </h5>
  <% end %>
  </div>

  <%= content_for :upcoming_meetups, @upcoming_meetups %>



<% @meetups.each_slice(3) do |meetups| %>
<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
<% meetups.each do |meetup| %>

        <div class="col">
            <div class="card" style="width: 18rem;">

              <%= image_tag(meetup.image_url, width: "100%", height: "200px") %> <br>
              <div class="card-body">
                <h5 class="card-title"><%= link_to meetup.title, meetup_path(meetup) %></h5>
                <p class=card-text><%= meetup.date_time.strftime("%m-%e-%y %H:%M") %><br></p>
                <p class="card-text"><%= meetup.description %></p>
                
                <%= link_to "See More", meetup_path(meetup), :class => "btn btn-primary" %> 
                
              </div>

          </div>
        </div>

<% end %>
</div>
<% end %>
