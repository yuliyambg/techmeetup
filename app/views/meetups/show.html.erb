<h1> Current Event </h1>

<% if current_user %>
  <% if current_user.attending_event(@meetup) %>
    <%= "already attending" %>
  <% else %>
    <%= button_to "Attend Meetup", { action: :attend }, :method => :post %> <br>
  <% end %>
<% else %>
  <p>Login in order to create or attend and event</p>
  
<% end %>
<br>

Title: <%= @meetup.title %> <br>
Date-Time:<%= @meetup.date_time.strftime("%m-%e-%y %H:%M") %><br>
<%= image_tag @meetup.image_url %><br>
Description: <%= @meetup.description %><br>
Link: <%= @meetup.link %>

<br>
<br>


<h4>Comments</h4>

<hr>

<% if current_user %>
<div>
<%= form_for ([@meetup, @comment]) do |f| %>
  <%=f.text_field :content %>
  <%=f.submit %>
<% end %>
</div>
<% end %>

<hr>
<% @comments.each do |comment| %>
  <li> <%= comment.content %> </li><br>
<% end %>